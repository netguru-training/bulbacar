.row
  .col-lg-12
    = simple_form_for(car, url: new_user_car_path(current_user), html: {class: 'form-horizontal' }) do |f|
      = f.input :brand, label: 'Brand'
      = f.input :model, label: 'Model'
      = f.input :seats, label: 'Number of seats', collection: Car.AVAILABLE_SEATS

      %p
        = f.button :submit
        = link_to 'Cancel', :back
